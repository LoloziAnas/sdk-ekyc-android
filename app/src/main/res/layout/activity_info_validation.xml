        android:text="Validity date"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="Sex"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="Address"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
